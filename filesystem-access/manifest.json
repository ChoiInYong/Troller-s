{
  "name": "Filesystem Access Example",
  "version": "1",
  "manifest_version": 2,
  "minimum_chrome_version": "23",
  "icons": {
    "16": "camera.png",
    "128": "camera.png"
  },
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    {"fileSystem": ["write"]}
  ],
  "intents": {
    "http://webintents.org/view" : [{
      "title" : "Txt Reader",
      "type" : ["text/*"]
    }],
    "http://webintents.org/edit" : [{
      "title" : "Txt Reader",
      "type" : ["text/*"]
    }]
  }
}
