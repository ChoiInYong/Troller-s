{
  "name": "Pong",
  "version": "1",
  "manifest_version": 2,
  // The public key is the string "App 2" that's base64-encoded. This is
  // specified so that the app has a stable ID when unpacked, regardless of
  // where on disk it is.
  "key": "QXBwIDI=",
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "intents": {
    "chrome-extension://app2/op": [
      {
        "title": "App2: Operation",
        "type": ["text/plain"]
      }
    ]
  }
}